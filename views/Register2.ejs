    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+HK:wght@100;300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="app.css">
    <title>City Gym</title>
</head>
<body>
    <!-- NAV BAR  -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <div class="gymLogo">
            <img src="cityGymLogo.jpg" alt="">
          </div>
            <a class="navbar-brand" href="#">City Gym</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link" href="#">HOME</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">JOIN NOW</a>
              </li>
              
              <li class="nav-item">
                <a class="nav-link" href="#">LOCATIONS</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">ABOUT US</a>
              </li>
            </ul>
            <form class="d-flex">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
          </div>
        </div>
      </nav>
<!-- FORM  -->
<div class="main-form">
      <div class="registration-form">
          <h2>Membership Form</h2>
        <form class="row g-3 needs-validation" novalidate>
           <div class="col-8">
                <label for="validationCustom06" class="form-label"><strong>Type Of Membership</strong></label>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                  <label class="form-check-label" for="invalidCheck">
                    Basic - $10 pew week
                  </label> 
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                  <label class="form-check-label" for="invalidCheck">
                    Regular - $15 pew week
                  </label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                  <label class="form-check-label" for="invalidCheck">
                    Premiun - $20 pew week
                  </label>
                </div>
            </div>
            <div class="col-4">
                <label for="validationCustom07" class="form-label"><strong>Duration</strong></label>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                  <label class="form-check-label" for="invalidCheck">
                    3 months
                  </label> 
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                  <label class="form-check-label" for="invalidCheck">
                    12 months*
                  </label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                  <label class="form-check-label" for="invalidCheck">
                    24 months**
                  </label>
                </div>
            </div>
            <label for="invalidCheck" class="form-label"><strong>Payment Options</strong></label>
              <div class="col-10">
                <label for="validationCustom04" class="form-label">Direct Debit</label>
              </div>
              <div class="col-2">
                <select class="form-select" id="validationCustom04" required>
                    <option selected disabled value="">Y / N ***</option>
                    <option>Y</option>
                    <option>N</option>
                </select>
              </div>
            <div class="col-4">
              <label for="validationCustom07" class="form-label"><strong>Frequency of payment</strong></label>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                <label class="form-check-label" for="invalidCheck">
                  Weekly
                </label> 
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                <label class="form-check-label" for="invalidCheck">
                  Monthly
                </label> 
              </div>
            </div>
     
            <div class="col-12 btn-location">
              <a class="btn btn-primary" href="/Register3">Next</a>
              <a class="btn btn-primary" href="/">Cancel</a>
            </div>
          </form>
      </div>
    </div>  

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
